<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="resheniekeysa.MainPage"
             Title="Добрые руки">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <BoxView BackgroundColor="#65AC64" Grid.Row="0"></BoxView>
        <Frame BackgroundColor="#FFFFFF" Grid.Row="2" Margin="10" CornerRadius="20">
            <StackLayout Orientation="Horizontal" Spacing="20" HorizontalOptions="Center"> 
                <Button/>
                <Button/>
                <Button/>
            </StackLayout>
        </Frame>
    </Grid>

</ContentPage>
