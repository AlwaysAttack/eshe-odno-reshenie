<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="resheniekeysa.ActionsDogChoosed">
    <ContentPage.Content>
        <StackLayout Margin="10" Spacing="15">
            <Button Margin="5" Text="Взять в опекунство" BackgroundColor="#65AC64" CornerRadius="20" Clicked="Button_Clicked"/>
            <Button x:Name="DonateFoodButton"  Margin="5" Text="Пожертвовать корм" CornerRadius="20" Clicked="DonateFoodButton_Clicked"/>
            <Button x:Name="DonateToyButton"  Margin="5" Text="Пожертвовать игрушку" CornerRadius="20" Clicked="DonateToy"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>